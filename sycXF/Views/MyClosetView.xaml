                                           HeightRequest="80"
                                           WidthRequest="80"
                                           BackgroundColor="AliceBlue">
                                        
                                    </Image>-->

                                </Frame>
            
                                 <StackLayout Grid.Column="1"
                                              VerticalOptions="Center">
                      
                                     <Label Text="{Binding ApparelCategoryTitle}"/>
              
                                 </StackLayout>
                    
                            </Grid>
                            
                        <!--</StackLayout>-->
                    </DataTemplate>
                </CollectionView.ItemTemplate>
        </CollectionView>
        </StackLayout>


