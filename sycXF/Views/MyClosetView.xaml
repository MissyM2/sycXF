        </ResourceDictionary>
    </ContentPage.Resources>

     <StackLayout>
         <FlexLayout x:Name="CVMainFilterCategories"
                     BindableLayout.ItemsSource="{Binding MainFilterCategoryCollection}"
                     HeightRequest="50"
                     AlignItems="Center"
                     JustifyContent="SpaceEvenly">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="0,20,0,10">
                            <Frame x:Name="CVMainFilterCategoryFrame"
                                    Padding="10,0,10,0"
                                    Margin="5"
                                    CornerRadius="10"
                                    HasShadow="False"
                                    VerticalOptions="FillAndExpand">
                                <Frame.GestureRecognizers>
                                         <TapGestureRecognizer Command="{Binding MainFilterCategorySelectedCommand, Mode=TwoWay}"/>
                                </Frame.GestureRecognizers>
                                    <StackLayout>  
                                        <Label x:Name="CVMainFilterCategoryLabel"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"
                                               Padding="0"
                                               FontSize="{StaticResource LargeSize}"
                                               Text="{Binding PropertyName}"
                                               TextColor="{StaticResource LightGreenColor}"/>
                                        <BoxView x:Name="FLUnderline"
                                               BackgroundColor="{StaticResource LightGreenColor}"
                                               IsVisible="True"
                                               HeightRequest="1"
                                               Margin="0,6,0,0"/>


                                    </StackLayout>
                                </Frame>
                             <Label x:Name="StackUnderline"
                                    TextColor="{StaticResource GrayColor}"
                                    IsVisible="True"
                                    HeightRequest="1"/>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
        <!--</CollectionView>-->
         </FlexLayout>

    <StackLayout>

        <CollectionView x:Name="CVApparelCategories"
                        ItemsSource="{Binding ApparelCategoryCollection}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedApparelCategory, Mode=TwoWay}"
                        SelectionChangedCommand="{Binding ApparelCategorySelectedCommand, Mode=TwoWay}"
                        SelectionChangedCommandParameter="{Binding .}">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>

            <CollectionView.Header>
                <FlexLayout Direction="Row"
                            JustifyContent="SpaceBetween"
                            BackgroundColor="{StaticResource GrayColor}"
                            Padding="12,20,12,20"
                            Margin="0,0,0,20">
                    <Label Text="Browse By Apparel Types"
                           FontSize="{StaticResource LargerSize}"/>
                    <Label Text="See all #"/>
                   

                </FlexLayout>
                

            </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!--<StackLayout BackgroundColor="AliceBlue" Padding="0" Margin="0">-->
                            <Grid>
                                <Grid.Padding>
                                    <OnPlatform x:TypeArguments="Thickness">
                                        <On Platform="iOS, Android" Value="0" />
                                        <On Platform="UWP, WinRT, WinPhone" Value="12, 0" />
                                    </OnPlatform>
                                </Grid.Padding>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
               
                                <Frame Grid.Column="0"
                                       BackgroundColor="Transparent"
                                       HasShadow="False"
                                       Padding="8"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       HeightRequest="80"
                                       WidthRequest="80">
                                    <Image Aspect="AspectFill"
                                           Source="{Binding IconGlyph, TargetNullValue='default_product.png'}"
                                           HeightRequest="60"
                                           WidthRequest="60">
                                        <!--<Image.Clip>
                                            <EllipseGeometry Center="40,40"
                                                             RadiusX="40"
                                                             RadiusY="40"/>

                                        </Image.Clip>-->
                                    </Image>
                                    <!--<Image
                                        HeightRequest="40"
